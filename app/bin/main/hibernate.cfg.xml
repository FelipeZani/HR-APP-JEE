<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>
<property name="hibernate.connection.driver_class"> org.mariadb.jdbc.Driver</property>
<property name="hibernate.connection.url">jdbc:mariadb://localhost:3306/jeeDB</property>
<property name="hibernate.connection.username">jee</property>
<property name="hibernate.connection.password">jee</property>
<property name="hibernate.dialect">org.hibernate.dialect.MariaDBDialect</property>
<property name="hibernate.hbm2ddl.auto">update</property>
<property name="hibernate.show_sql">true</property>
<!-- Mapping of entities -->

<!-- Department -->
<mapping class="org.department.model.Department"/>


<!-- Project -->
<mapping class="org.project.model.Project"/>
<mapping class="org.project.model.EmployeeProject"/>


<!-- Employee -->
<mapping class="org.employee.model.Account"/>
<mapping class="org.employee.model.Employee"/>
<mapping class="org.employee.model.PayStub"/>
<mapping class="org.employee.model.Post"/>
<mapping class="org.employee.model.RoleEmployee"/>
<mapping class="org.SetUpDB"/>
</session-factory>
</hibernate-configuration>
